pipeline {

    agent {
        node {
            label 'vagrant-agent1'
        }
    }
    
    stages {
        stage ('GIT') {
            steps {
               echo "Getting Project from Git"; 
                    git branch: "marwen", 
                    url: "git@github.com:marwenkouidhi/Kaddem-Project.git",
                    credentialsId: "jenkins-private-key";
            }
        }

       stage("Build Artifact") {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }
        
        stage("Unit Testing") {
            steps {
                sh "echo ------"
            }
        }
        
        stage("SRC Analysis Testing") {
            steps {
                sh "mvn sonar:sonar  -Dsonar.projectKey=kaddem-spring-api -Dsonar.host.url=http://192.168.56.11:9000 -Dsonar.login=394020506625035ec5d32d6164e65c70c8bfbf47"
            }
        }
        
 
        
       stage("Deploy artifact to Nexus") {
                steps {
                    sh "mvn deploy -e -DskipTests"
                }
        }
                
        stage("Build docker image") {
            steps {
                sh "docker build -t kaddem-image ."
            }
        }
        
       stage("Deploy docker image to Nexus") {
            steps {
                sh "docker login -u 'admin' -p 'admin' localhost:8082"
                sh "docker tag kaddem-image localhost:8082/kaddem-image"
                sh "docker push localhost:8082/kaddem-image"
            }
        }
        
        stage("Run docker containers") {
            steps {
                sh "docker compose up -d"
            }
        }
        
    }
    post {
        always {
            cleanWs()
        }
    }
 
}
